<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp"
    android:gravity="center_vertical"
    android:background="?android:attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_expense_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Expense Title"
            android:textAppearance="?attr/textAppearanceListItem"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/item_expense_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CATEGORY"
            android:textAppearance="?attr/textAppearanceListItemSmall"
            android:textSize="12sp"
            android:textStyle="italic"/>

    </LinearLayout>

    <TextView
        android:id="@+id/item_expense_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="$0.00"
        android:textAppearance="?attr/textAppearanceListItem"
        android:textSize="16sp"
        android:textStyle="bold"/>

    <ImageButton
        android:id="@+id/button_delete_expense"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@android:drawable/ic_menu_delete" 
        android:contentDescription="Delete Expense"
        android:background="?attr/selectableItemBackgroundBorderless" 
        android:padding="8dp"
        android:layout_marginStart="16dp"/>

</LinearLayout> 